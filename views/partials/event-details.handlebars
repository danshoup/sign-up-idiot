
<div class="card text-center mb-3 w-100">
    <div class="card-body">
      <a href="/event/{{id}}"><h3 data-event_id="{{id}}" class="card-title text-uppercase font-weight-bold">{{event_name}}</h3></a>
      <hr>
      <p class="card-text font-italic">To volunteer click on an available volunteer position below.</p>
    </div>
    <div class="list-group">
        {{#each tasks as |task|}}
        <p class="card-text font-italic">To volunteer click on an available position below...</p>
        {{> task-details}}
        {{/each}}
    </div>
</div>




